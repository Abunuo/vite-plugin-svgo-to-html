{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationDir": "./typings", // 声明文件输出的目录
    "strict": true,
    "noImplicitAny": false,
    "jsx": "preserve",
